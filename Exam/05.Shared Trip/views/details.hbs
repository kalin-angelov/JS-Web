<section class="py-5 details" id="trip-details-page">
    <div class="container">
        <div class="destination">
            <div>
                <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                <h5> from <span>{{product.start}}</span> to <span>{{product.end}}</span> </h5>
            </div>
            <div>
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <h5> <span>{{product.date}}</span> at <span>{{product.time}}</span> </h5>
            </div>
        </div>
        <p class="line"></p>
        <div class="buddies-info">
            <i class="fas fa-users buddies"></i>
            <h5>Shared trip Buddies</h5>
            <div>
                {{#if joinedPeople}}
                    {{#each joinedPeople}}
                        {{>peopleList}}
                    {{/each}}
                {{else}}
                    <p>there are no buddies yet...</p>
                {{/if}}
            </div>
            <h5>Driver: <span>{{driver}}</span> </h5>
        </div>
        <p class="line"></p>
        <h5 class="brand">Car Brand: <span class="lead">{{product.brand}}</span></h5>
        <div class="trip-info">
            <div>
                <img class="img-fluid rounded"
                    src="{{product.image}}"
                    alt="car-image">
            </div>
            <div class="trip-desc">
                <h5>Information about the trip</h5>
                <textarea class="lead">{{product.description}}</textarea>
                <h5>Price: <span class="lead">{{product.price}}</span> BGN</h5>

                {{#if isAuthenticated}}
                    <div class="actions">
                        {{#if isOwner}}
                            <a href="/delete/{{product._id}}" class="btn btn-danger">Delete this trip</a>
                            <a href="/edit/{{product._id}}" class="btn btn-warning">Edit this trip</a>
                        {{/if}}
                        {{#unless isOwner}}
                            {{#if joined}}
                                {{#if seats}}
                                    <a href="/join/{{product._id}}" class="btn btn-join">Join now, [ {{seats}} ] seats left!</a>
                                {{/if}}
                            {{else}}
                                <span class="btn btn-info">Already joined. Don't be late!</span>
                            {{/if}}
                            {{#unless seats}}
                                {{#if joined}}
                                    <span class="btn btn-secondary">No seats available!</span>
                                {{/if}}
                            {{/unless}}
                        {{/unless}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>