<section id="my-posts">
    <h1>My post.</h1>

    <div class="my-container">
        {{#if posts}}
            {{#each posts}}
                {{>profilePosts}}
            {{/each}}
        {{else}}
            <div class="no-posts">
                <div class="no-posts-img">
                    <img src="/img/bear.jpg" alt="image_nature_3">
                </div>
                <p class="no-offer">There are no own posts yet...</p>
            </div>
        {{/if}}
    </div>
</section>