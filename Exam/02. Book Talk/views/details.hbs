<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br>{{product.title}}</h2>
            <h3>Author: {{product.author}}</h3>
            <h3>Stars: {{product.stars}}</h3>
            <h3>Genre: {{product.genre}}</h3>
            <h3>{{product.review}}</h3>
        {{#if isAuthenticated}}
            <div class="buttons">
                {{#if isOwner}}
                    <a href="/edit/{{product._id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{product._id}}" class="btn-delete">Delete</a>
                {{else}}
                    {{#if hasProduct}}
                        <p class="wish-pub">You already added the book to your wish list</p>
                    {{else}}
                        <a href="/wish/{{product._id}}" class="btn-wish">Wish to read</a>
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
        </article>

        <article class="details-card-image">
            <img src="{{product.image}}">
        </article>

    </article>
</section>