<section class="edit-form-container">

    <form method="POST">
        <h3>Edit Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" value="{{product.title}}" id="">
        <label>Author</label>
        <input type="text" name="author" class="box" value="{{product.author}}" id="">
        <label>Genre</label>
        <input type="text" name="genre" class="box" value="{{product.genre}}" id="">
        <label>Stars</label>
        <input type="number" name="stars" class="box" value="{{product.stars}}" id="">
        <label>Image</label>
        <input type="text" name="image" class="box" value="{{product.image}}" id="">
        <label>Review</label>
        <textarea class="box"
            name="review">{{product.review}}</textarea>
        <input type="submit" value="Edit" class="btn">
    </form>
</section>