<section id="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{offer.title}}</h2>
            <h3>Author: {{author}}</h3>
            <h3>Painting technique: {{offer.technique}}</h3>
            <h3>Certificate of authenticity: {{offer.certificate}}</h3>

            {{#if isAuthenticated}}
                <div class="buttons">
                    {{#if isOwner}}
                        <a href="/edit/{{offer._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{offer._id}}" class="btn-delete">Delete</a>
                    {{/if}}
                    {{#unless isOwner}}
                        {{#if canShare}}
                            <a href="/shared/{{offer._id}}" class="btn-share">Share publication</a>
                        {{else}}
                            <p class="shared-pub">You already shared this publication</p>
                        {{/if}}
                    {{/unless}}
                </div>
            {{/if}}

        </article>

        <article class="details-card-image">
            <img src="/img/img-5.jpg" alt="art-image2">
        </article>

    </article>
</section>