<h1>Attach a new accessory</h1>
<div class="form">
    <h2>{{cubeInfo.name}}</h2>
    <img class="cube" src="{{cubeInfo.imageUrl}}">
    {{#if accessoryInfo}}
        <form action="/accessory/attach/{{cubeInfo._id}}" method="POST">
            <label for="accessory">Accessories</label>
            <select id="accessory" name="accessory" />
            {{#each accessoryInfo}}
                {{>accessory}}
            {{/each}}
            </select>
            <input type="submit" value="Attach">
        </form>
    {{else}}
        <h3 class="italic">This cube has all available accessories so far or there is no available at all...</h3>
    {{/if}}
    <a class="btn" href="/cube/details/{{cubeInfo._id}}">Back</a>
</div>